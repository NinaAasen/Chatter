<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!--RECORDBUTTON-->
    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/btnRec"
        android:id="@+id/btnRec"
        android:background="#7C3D47"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:onClick="btnPress"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnStop" />

    <!--STOP RECORDING-BUTTON-->
    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/btnStop"
        android:id="@+id/btnStop"
        android:onClick="btnPress"
        android:background="#7C4D55"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:layout_below="@+id/btnRec"
        android:layout_alignStart="@+id/btnPlay" />

    <!--PLAY BUTTON-->
    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/btnPlay"
        android:id="@+id/btnPlay"
        android:background="#7BAF8C"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:onClick="btnPress"
        android:layout_below="@+id/btnStop"
        android:layout_centerHorizontal="true" />

    <!--STOP PLAYBACK-_BUTTON-->
    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/btnDone"
        android:id="@+id/btnDone"
        android:background="#799B87"
        android:fontFamily="trebuchet ms"
        android:textSize="20sp"
        android:onClick="btnPress"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true" />

    <!--LIST OF RECORDINGS -->
    <ListView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/lv2"
        android:background="#9B9FA0"
        android:fontFamily="trebuchet ms"
        android:textSize="12sp"
        android:layout_below="@+id/btnDone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>