<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#8DA7B0"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/btnRec"
        android:id="@+id/btnRec"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#D4A190"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:onClick="btnPress" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/btnStop"
        android:id="@+id/btnStop"
        android:onClick="btnPress"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnRec"
        android:background="#D4A190"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/btnPlay"
        android:id="@+id/btnPlay"
        android:layout_below="@+id/btnStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#D4A190"
        android:fontFamily="trebuchet ms"
        android:textSize="28sp"
        android:onClick="btnPress" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/btnDone"
        android:id="@+id/btnDone"
        android:layout_below="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay"
        android:layout_marginTop="20dp"
        android:background="#D4A190"
        android:fontFamily="trebuchet ms"
        android:textSize="20sp"
        android:onClick="btnPress" />

</RelativeLayout>